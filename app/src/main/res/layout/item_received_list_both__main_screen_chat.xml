<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="292dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:id="@+id/card_root_view">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/_tmpL1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView_avatar"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/avatar_m"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#ffffff" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:background="@drawable/chat_left_qp"
                        android:minWidth="80dp"
                        android:minHeight="45dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/audio_msg_bubble"
                        android:alpha="0.8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wenop"
                            android:id="@+id/tv_nickName"
                            android:layout_marginLeft="13dp"
                            android:layout_gravity="left|center_vertical"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="说"
                            android:id="@+id/textView6"
                            android:layout_gravity="left|center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_nickName" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/voice_right3"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="2dp"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentRight="false"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/textView6"
                            android:layout_marginLeft="12dp"
                            android:alpha="0.5" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11‘’"
                        android:id="@+id/textView_audioLength"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/_tmpL1"
                android:layout_above="@+id/_tmpI_ENFLS">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView_contentPhoto"
                    android:src="@drawable/l_0"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:alpha="0.8" />
            </LinearLayout>

            <include layout="@layout/content_card_msg_info"
                android:id="@+id/_tmpI_ENFLS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>
